<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="vehicle image">
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4">2018 Chrysler Town & Country</p>
        <p class="subtitle is-6">
          <span><%= price %></span>
          &middot;
          <span><%= Number(mileage).toLocaleString()  %>mi</span>
          <% if (owners && owners === 1) { %>
            &middot;
            <span class="tag is-success">1 OWNER</span>
          <% } else if (typeof(mileage) === "number" && mileage <= 20000) { %>
            &middot;
            <span class="tag is-success">LOW MILES</span>
          <% } else if (typeof(epa) === "string") { %>
            &middot;
            <span>EPA <%= epa %></span>
          <% } %>
        </p>
      </div>
    </div>

    <div class="content">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      Phasellus nec iaculis mauris. <a>@bulmaio</a>.
      <a href="#">#css</a> <a href="#">#responsive</a>
      <br>
      <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
    </div>

    <footer class="card-footer">
      <a href="#" class="card-footer-item">View More Details</a>
      <a href="#" class="card-footer-item">Share</a>
    </footer>    
  </div>
</div>
