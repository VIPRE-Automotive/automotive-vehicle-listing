<table class="table is-hoverable">
  <tbody>
    <% if (typeof(data.Price) === "number") { %>
      <tr>
        <td>Our Price</td>
        <td><b><%= data.Price.toLocaleString('en-US', { style: 'currency', currency: 'USD', minimumFractionDigits: 0}) %></b>*</td>
      </tr>
    <% } %>
    <% if (typeof(data.MSRP) === "number") { %>
      <tr>
        <td>Factory MSRP</td>
        <td><%= data.MSRP.toLocaleString('en-US', { style: 'currency', currency: 'USD', minimumFractionDigits: 0}) %></td>
      </tr>
    <% } %>
    <% if (typeof(data.Trim) === "string" && data.Trim.length > 0) { %>
      <tr>
        <td>Trim</td>
        <td><%= data.Trim %></td>
      </tr>
    <% } %>
    <% if (typeof(data.Drivetrain) === "string" && data.Drivetrain.length > 0) { %>
      <tr>
        <td>Drivetrain</td>
        <td><%= data.Drivetrain %></td>
      </tr>
    <% } %>
    <% if (typeof(data.Odometer) === "number" && data.Odometer > 0) { %>
      <tr>
        <td>Odometer</td>
        <td><%= (Math.round(Number(data.Odometer) / 100) * 100).toLocaleString()  %>mi</td>
      </tr>
    <% } %>
    <% if (typeof(data.ExtColor) === "object" && data.ExtColor.length > 0) { %>
      <tr>
        <td>Exterior Color</td>
        <td>
          <%= data.ExtColor[0] %>
          <% if (typeof(data.ExtColor[1]) === "string") { %>
            <div class="is-color-block" style="background-color: <%= data.ExtColor[1] %>;"></div>
          <% } %>
        </td>
      </tr>
    <% } %>
    <% if (typeof(data.IntColor) === "object" && data.IntColor.length > 0) { %>
      <tr>
        <td>Interior Color</td>
        <td>
          <%= data.IntColor[0] %>
          <% if (typeof(data.IntColor[1]) === "string") { %>
            <div class="is-color-block" style="background-color: <%= data.IntColor[1] %>;"></div>
          <% } %>
        </td>
      </tr>
    <% } %>
    <% if (typeof(data.StockNum) === "number" && data.StockNum > 0) { %>
      <tr>
        <td>Stock #</td>
        <td><%= data.StockNum %></td>
      </tr>
    <% } %>
    <% if (typeof(data.VIN) === "string" && data.VIN.length === 17) { %>
      <tr>
        <td>Vehicle Identification Number (VIN)</td>
        <td>
          <%= data.VIN.substr(0, 9) %><b class="is-underlined"><%= data.VIN.substr(9, 8) %></b>
          <% if (data.ShowCARFAX && data.ShowCARFAX == true) { %>
            (<a href='http://www.carfax.com/VehicleHistory/p/Report.cfx?partner=DVW_1&vin=<%= data.VIN %>' target="_blank">CARFAX</a>)
          <% } %>
        </td>
      </tr>
    <% } %>
    <% if (typeof(data.EPA) === "object" && typeof(data.EPA.City) === "number" && typeof(data.EPA.Highway) === "number") { %>
      <tr>
        <td>EPA Rated MPG</td>
        <td><%= data.EPA.City %> City / <%= data.EPA.Highway %> Highway mpg</td>
      </tr>
    <% } %>
  </tbody>
</table>
