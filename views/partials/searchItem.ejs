<div class="card <%= data.Sold ? 'is-out-of-stock' : '' %>">
  <!-- Card Image -->
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://via.placeholder.com/1280x960" alt="Product image">
    </figure>
  </div>

  <!-- Card Tags -->
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4"><%= data.ModelYear %> <%= data.Make %> <%= data.Model %></p>
        <p class="subtitle is-6">
          <!-- Basic Attributes -->
          <% if (typeof(data.Odometer) === "number" && data.Odometer > 0) { %>
            <span><%= (Math.round(Number(data.Odometer) / 100) * 100).toLocaleString()  %>mi</span>
          <% } %>
          <% if (typeof(data.EPA) === "object" && typeof(data.EPA.City) === "number" && typeof(data.EPA.Highway) === "number") { %>
            &middot;
            <span>EPA <%= data.EPA.City %> / <%= data.EPA.Highway %>mpg</span>
          <% } %>

          <!-- Feature Tags -->
          <% if (data.Owners && data.Owners === 1) { %>
            &middot;
            <span class="tag is-success">1 OWNER</span>
          <% } else if (typeof(data.Odometer) === "number" && data.Odometer <= 20000) { %>
            &middot;
            <span class="tag is-info">LOW MILES</span>
          <% } else if (typeof(data.EPA) === "object" && typeof(data.EPA.City) === "number" && typeof(data.EPA.Highway) === "number" && (data.EPA.City >= 35 || data.EPA.Highway >= 35)) { %>
            &middot;
            <span class="tag is-primary">Fuel Efficient</span>
          <% } %>
        </p>
      </div>
    </div>
  </div>

  <!-- Pricing Table -->
  <% if (context.page !== "listing" && typeof(data.MSRP) === "number" && typeof(data.Price) === "number") { %>
    <div class="content">
      <div class="px-3 has-text-centered">
        <nav class="level is-mobile">
          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Original MSRP</p>
              <p class="title has-text-weight-normal">
                <%= data.MSRP.toLocaleString('en-US', {
                  style: 'currency',
                  currency: 'USD',
                  minimumFractionDigits: 0
                }) %>
              </p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Our Price</p>
              <p class="title">
                <%= data.Price.toLocaleString('en-US', {
                  style: 'currency',
                  currency: 'USD',
                  minimumFractionDigits: 0
                }) %>
              </p>
            </div>
          </div>
        </nav>
      </div>
    </div>
  <% } %>

  <!-- Card Footer -->
  <footer class="card-footer">
    <a href="<%= data.Link %>" class="card-footer-item">View More Details</a>
    <a href="#" class="card-footer-item">Share</a>
  </footer>
</div>
